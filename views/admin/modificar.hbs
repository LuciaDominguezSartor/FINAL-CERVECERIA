<div class="conteiner">
    <div id="modificar" class="row align-items-center hero"> 
    <div class="row">
        <div class="col-6 offset-2">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                <label for="">Titulo</label>
                <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
            </div>
             <div class="form-group">
                <label for="">Subtitulo</label>
                <input type="text" placeholder="Subtitulo" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
            </div>
            <div class="form-group">
                <label for="">Cuerpo</label>
                <textarea class="form-control" name="cuerpo"> {{novedad.cuerpo}} </textarea>
            </div>
             <button type="submit" class="btn btn-warning" style="margin-top: 40px;">Modificar</button>
            </form>
             {{#if error}}
             <h5> {{message}} </h5>
             {{/if}}
        </div>
    </div>
</div>